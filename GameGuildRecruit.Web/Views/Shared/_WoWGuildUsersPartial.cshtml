@model GuildRecruitUserFormModel


<div class="text-center position-relative top-0 start-0 ">
    <form class="input-group-sm" asp-action="AddContact" method="post">
        <div class="card col-4 border-info" style="width: 15rem;">
            <div class="card-header bg-primary-subtle ">Guild "@Model.GuildName"</div>
            <div>
                @if (Model.UserAvatarPix != null)
                {
                    <img height="70" width=" 70" src="/Img/AvatarPix/@Model.UserAvatarPix">
                }
                @if (Model.UserContactNum > 0)
                {
                    @if (Model.UserContactNum == 1)
                    {
                        <a class="card-title mt-1">Has @Model.UserContactNum Candidat</a>
                    }
                    else
                    {
                        <a class="card-title mt-1">Has @Model.UserContactNum Candidats</a>
                    }
                }
            </div>
            <div class="card-body text-primary">
                <h6 class="card-title mt-1">"@Model.NickName"</h6>
            </div>
            @if (Model.UrlLink != null)
            {
                <a class="link-info" href="@Model.UrlLink"  target="_blank">Visit @Model.NickName Info Page</a>
            }
            @if (Model.ServerName != null)
            {
                <div class="card-body text-primary" style="height: 3rem;">
                    <h6 class="card-title mt-1">In "@Model.ServerName" Server</h6>
                </div>
            }
            <hr />
            <div class="box text-primary">@Model.Description</div>
            <a class="btn btn-success btn-sm" asp-area="" method="post" asp-controller="Contact" asp-action="AddContact" asp-route-id="@Model.Id">Contact The Guild</a>
            @if (Model.UserContactNum >= 1)
            {
                <button class="btn btn-info btn-sm" asp-area="" method="post" asp-controller="Pages" asp-action="WoWContacts" asp-route-id="@Model.Id">See All Contacts</button>
            }
        </div>
    </form>
</div>


