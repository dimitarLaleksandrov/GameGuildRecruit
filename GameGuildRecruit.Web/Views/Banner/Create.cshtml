@model BannerFormModel

@{
    ViewBag.Title = "Add Banner";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url("/Img/Background/BG17.png");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }
    </style>
</head>


<body>
    <header>
        <h2 class="text-center" style="color:darkred">@ViewBag.Title</h2>
        <div class="row">
            <div class="row">
                <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                    <form asp-action="Create" method="post" asp-route-id="@Model.Id">
                        <div class="mb-3">
                            <label asp-for="@Model.GameName" class="form-label" style="color:orangered">Game Name</label>
                            <select asp-for="@Model.GameName" class="form-select" name="GameName" aria-required="true">
                                <option selected>Open this select menu</option>
                                <option value="WorldOfWarcraft">World Of Warcraft</option>
                                <option value="StarCraft">Star Craft</option>
                                <option value="Diablo">Diablo</option>
                                <option value="GooglePlay">Google Play</option>
                            </select>
                            <span asp-validation-for="@Model.GameName" class="text-danger"></span>
                        </div>                                                                 
                        <div class="mb-3">
                            <label asp-for="@Model.BannerImageURL" class="form-label" style="color:orangered">Banner Image "/Img/..."</label>
                            <input asp-for="@Model.BannerImageURL" class="form-control" aria-required="true" />
                            <span asp-validation-for="@Model.BannerImageURL" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.BannerTitle" class="form-label" style="color:orangered">Banner Title</label>
                            <input asp-for="@Model.BannerTitle" class="form-control" aria-required="true" />
                            <span asp-validation-for="@Model.BannerTitle" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.BannerURL" class="form-label" style="color:orangered">Banner URL</label>
                            <input asp-for="@Model.BannerURL" class="form-control" aria-required="true" />
                            <span asp-validation-for="@Model.BannerURL" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Description" class="form-label" style="color:orangered">Description</label>
                            <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input class="btn btn-primary" type="submit" value="@ViewBag.Title" />
                        </div>
                    </form>
                </div>
            </div>
        </div>



        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }

    </header>

</body>
</html>
